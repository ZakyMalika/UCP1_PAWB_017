<!DOCTYPE html> 
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pupuk</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>


<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Daftar Pupuk</h1>

        <!-- Tombol Navigasi -->
        <div class="mb-3">
            <a href="/pupuk-mysql/add" class="btn btn-primary">Tambah Pupuk</a>
            <a href="/bibit-mysql/" class="btn btn-secondary">Ke Bibit</a>
            <a href="/pupuk" class="btn btn-info">Pupuk Mockup Database</a>
        </div>

        <!-- Tabel Daftar Pupuk -->

        <% if (pupuk && pupuk.length> 0) { %>
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nama</th>
                        <th>Jenis</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% pupuk.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.id %>
                            </td>
                            <td>
                                <%= item.namapupuk %>
                            </td>
                            <td>
                                <%= item.tipepupuk %>
                            </td>
                            <td>
                                <a href="/pupuk-mysql/edit/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/pupuk-mysql/delete/<%= item.id %>" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Hapus data ini?')">Hapus</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } else { %>
                <p>Tidak ada data pupuk.</p>
                <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>