<!DOCTYPE html> 
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Pupuk</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center mb-4">Daftar Pupuk</h1>

    <!-- Tombol Navigasi -->
    <div class="mb-3">
      <a href="/pupuk/add" class="btn btn-success">Tambah Pupuk</a>
      <a href="/bibit" class="btn btn-info">Kembali ke Bibit</a>
      <a href="/pupuk-mysql" class="btn btn-primary">Ke Database Pupuk MySQL</a>
    </div>

    <!-- Tabel Daftar Pupuk -->
    <% if (pupuk && pupuk.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Jenis</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% pupuk.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.nama %></td>
              <td><%= item.jenis %></td>
              <td>
                <a href="/pupuk/edit/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a> | 
                <a href="/pupuk/delete/<%= item.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Apakah Anda yakin ingin menghapus pupuk ini?')">Hapus</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Tidak ada data pupuk.</p>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>